{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Commands",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#strings" },
    { "include": "#options" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.command",
          "begin": "/\\*",
          "end": "\\*/"
        },
        {
          "name": "comment.line.command",
          "match": "//.*"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.command",
          "match": "\\b(app|command|option)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.command",
          "match": "\\b(boolean|string|number|true|false)\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.command",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.command",
          "match": "\\\\."
        }
      ]
    },
    "options": {
      "patterns": [
        {
          "name": "variable.parameter.command",
          "match": "--[a-zA-Z_][a-zA-Z0-9_]*"
        }
      ]
    }
  },
  "scopeName": "source.cmds"
}
